{% extends 'base.html.twig' %}

{% block title %}{{video.title}} | aitkermoune.net{% endblock %}

{% block body %}

    <div id="player" class="card w-100 p-7"></div>
    <br />
    <h4>{{ video.title }}</h4>
    <div class="info-video"><small><b>Ajout√©e le:</b> {{ video.dateAd|date('d-m-Y') }}</small></div>
    <br />
    <b>Description:</b> <br />
    <p>
        {{ video.description }}
    </p>
    <br />
    {% include '/bundles/FOSCommentBundle/Thread/async.html.twig' with {'id': 'video_'~video.id} %}
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    <script>
        var tag = document.createElement('script');
        var itemMenu = 4;
        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
        
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player', {
                videoId: '{{video.linkYoutube}}',
                events: {
                    'onReady': onPlayerReady,
                    //'onStateChange': onPlayerStateChange
                }
            });
        }

        function onPlayerReady(event) {
            event.target.playVideo();
        }

        var done = false;
        function onPlayerStateChange(event) {
            if (event.data == YT.PlayerState.PLAYING && !done) {
                setTimeout(stopVideo, 6000);
                done = true;
            }
        }
        function stopVideo() {
            player.stopVideo();
        }
    </script>
{% endblock %}