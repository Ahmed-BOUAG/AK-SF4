<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {#        <link rel="stylesheet" href="{{asset('build/app.css')}}">#}
        <link href="https://fonts.googleapis.com/css?family=Cairo&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="logo" id="logo"><img src="http://a.bouagoune.free.fr/menu/logo-aitk.png"></div>
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v6.0"></script>
        {% if app.user %}
            <header>
                {{ include('menu.html.twig') }}
            </header>
        {% endif %}
        <main role="main" class="container">
            {% if not app.user %}
                {% block header %}
                    <div class="header-top">
                        <div style='height:147px; width:100%; background:url("/uploads/documents/1581730446001_aitkermoune_com.png") no-repeat;'>
                            {#<span class="title-site">{% trans %}Aitkermoune.net{% endtrans %}</span>#}
                            {#<img src="/uploads/documents/1581727972921_banniere_site.png" alt="" />#}
                        </div>
                    </div>
                    <div class="topnav" data-spy="affix" data-offset-top="200" id="topMenu">
                        <a href="{{ path('accueil_home') }}" class="active"> <span class="libelle-home">{% trans %}Accueil{% endtrans %}  </span><i class="fas fa-home"></i></a>
                        <a href="#news"> {% trans %}Actualité locale{% endtrans %}</a>
                        <a href="#contact">  {% trans %}Services{% endtrans %}</a>
                        <a href="#about">{% trans %}Images et vidéos{% endtrans %}</a>
                        <a href="#contact">{% trans %}Nous contacter{% endtrans %}</a>
                        <a href="javascript:void(0);" class="icon" onclick="toggleHamburgerMenu()">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>

                {% endblock %}
            {% endif %}
            <div class="row">
                <div class="cardleft col-12 {% if not app.user %} col-md-9 {% endif %}">
                {% block body %}{% endblock %}
            </div>
            {% if not app.user %}
                {{ include ('sideBar.html.twig') }}
                <style>
                    body{padding-top: 10px !important;}
                </style>
            {% endif %}
        </div>

    </main>
    <div class="both"></div>
    {% block footer %}
        <footer class="footer">
            <div class="container">
                <!--Copyright-->
                <div>
                    <div class="container-fluid text-center">
                        &copy; Ahmed BOUAGOUNE 2019
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
    {% if not app.user %}
        {% include '/js_global.html.twig'%}
    {% endif %}
</body>
</html>