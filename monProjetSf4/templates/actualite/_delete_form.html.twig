<form method="post"
      style="margin-right:5px;"
      action="{{
  path(
    'actualite_delete',
    {
      id: actualite.id
    }
  )
      }}"
      class="float-right"
      onsubmit="return confirm('Vous êtes sur de vouloir supprimer cette entrée?');">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="hidden"
           name="_token"
           value="{{ csrf_token('delete' ~ actualite.id) }}" />
    {{
    include(
      'button.html.twig',
      {
        button_label: 'Supprimer',
        type_button: 'outline-danger',
        icon_label: 'fa-trash-alt'
      }
    )
    }}
</form>
