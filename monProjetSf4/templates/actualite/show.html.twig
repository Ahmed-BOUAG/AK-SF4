{% extends 'base.html.twig' %}

{% block title %}{{ actualite.titre }}{% endblock %}

{% block body %}
    <h1 class="display-5 direction-rtl">{{ actualite.titre }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <td class="text-muted">{{ actualite.date ? actualite.date|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <td>{{ actualite.message|raw }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    {% if app.user %}
        <a style="margin-left:5px;" href="{{ path('actualite_index') }}">{{ include('button.html.twig', {'type_button': 'outline-dark', 'button_label': 'Retour à la liste', 'icon_label': 'fa-undo-alt'}) }} </a>
        <a href="{{ path('actualite_edit', {'id': actualite.id}) }}">{{ include('button.html.twig', {'button_label': 'Mettre à jour', 'type_button': 'info', 'icon_label': 'fa-sync-alt'}) }} </a>
        {{ include('actualite/_delete_form.html.twig') }}
    {% endif %}
    <br />
    Les commentaires:
     <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.min.js">
    {% include '@FOSComment/Thread/async.html.twig' with {'id': actualite.id} %}
    
    {{ include('actualite/js_actualite.html.twig') }}
{% endblock %}
